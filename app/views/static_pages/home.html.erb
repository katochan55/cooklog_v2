<% if logged_in? %>
	<div id="fh5co-portfolio">
		<div class="container">
		  <div class="col-md-9">
		    <h3>みんなの料理 (<%= @feed_items.count %>)</h3>
		    <%= render 'shared/feed' %>
		  </div>
			<div class="col-md-3">
				<p><%= link_to "新しい料理を作る", record_dish_path, class: "btn btn-primary btn-lg btn-demo btn-record" %></p>
				<br>
				<p><%= link_to "みんなの料理をCSV出力", dishes_path(format: :csv), class: "btn btn-primary btn-lg btn-demo btn-csv" %></p>
		  </div>
		</div>
	</div>
	<% else %>
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2 text-center">
				<div class="display-t js-fullheight">
					<div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
						<div class="row recruit-login">
							<h3 class="title-form">【採用担当者様　専用ログインフォーム】</h3>
							<h4 class="description-form">下記の「専用ログイン」ボタンを押していただければ、<br>すぐに専用アカウントでログインが可能です。</h4>
							<div class="col-md-6 col-md-offset-3">
								<%= form_for(:session, url: login_path, local: true) do |f| %>
									<div class = 'form-group'>
										<%= f.label 'メールアドレス' %>
										<%= f.email_field :email, class: 'form-control', id: 'recruit_user_email', value: 'recruit@example.com' %>
									</div>
									<div class = 'form-group'>
										<%= f.label 'パスワード' %>
										<%= f.password_field :password, class: 'form-control', id: 'recruit_user_password', value: 'password' %>
									</div>
									<div class = 'form-group'>
										<%= f.label :remember_me, class: "checkbox inline" do %>
											<%= f.check_box :remember_me %>
											<span>ログインしたままにする</span>
										<% end %>
									</div>
									<%= f.submit '専用ログイン', class: 'btn btn-primary' %>
								<% end %>
								<div class="recruit-account">
									<p>＜採用担当者様　専用アカウント＞</p>
									<p>メールアドレス：recruit@example.com</p>
									<p>パスワード：password</p>
									<p>※フォームに予め入力済</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<header id="fh5co-header" class="fh5co-cover js-fullheight" role="banner">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 text-center">
					<div class="display-t js-fullheight">
						<div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
							<h1>毎日のお料理に、<br>写真やメモをつけて保存。</h1>
							<h2>今日のレシピ、もう迷わない！</h2>
							<p>
								<%= link_to 'クックログを始める', signup_path, class: "btn btn-primary btn-lg btn-demo" %>
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>
<% end %>
