<% if logged_in? %>
	<div id="fh5co-portfolio">
		<div class="container">
		  <div class="col-md-9">
		    <h3>みんなの料理 (<%= @feed_items.count %>)</h3>
		    <%= render 'shared/feed' %>
		  </div>
			<div class="col-md-3">
				<p><%= link_to "新しい料理を作る", record_dish_path, class: "btn btn-primary btn-lg btn-demo btn-record" %></p>
				<br>
				<p><%= link_to "みんなの料理をCSV出力", dishes_path(format: :csv), class: "btn btn-primary btn-lg btn-demo btn-csv" %></p>
				<br>
				<p><%= link_to "自分の料理をCSV出力", '#', class: "btn btn-primary btn-lg btn-demo btn-csv" %></p>
		  </div>
		</div>
	</div>
	<% else %>
	<header id="fh5co-header" class="fh5co-cover js-fullheight" role="banner">
	  <div class="overlay"></div>
	  <div class="container">
	    <div class="row">
	      <div class="col-md-8 col-md-offset-2 text-center">
	        <div class="display-t js-fullheight">
	          <div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
							<!-- <div class="row row-icon">
								<i class="fas fa-carrot fa-3x"></i>
								<i class="fas fa-hamburger fa-3x"></i>
							</div> -->
	            <h1>毎日のお料理を、写真やメモをつけて保存。</h1>
	            <h2>今日のレシピ、もう迷わない！</h2>
	            <p>
	              <%= link_to 'クックログを始める', signup_path, class: "btn btn-primary btn-lg btn-demo" %>
	            </p>
							<!-- <div class="row row-icon">
								<i class="fas fa-fish fa-3x"></i>
								<i class="fas fa-pizza-slice fa-3x"></i>
							</div> -->
	          </div>
	        </div>
	      </div>
	    </div>
	  </div>
	</header>
<% end %>
