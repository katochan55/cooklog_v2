<%= form_for(@log) do |f| %>
  <%= hidden_field_tag :dish_id, @dish.id %>
  <div class="row">
    <div class="field">
      <%= f.label :content %>（ <%= "#{@dish.logs.count}" %> ）
      <%= f.text_area :content, placeholder: "クックメモを追加..." %>
    </div>
  <div class="col-md-3">
    <%= f.submit "作る", class: "btn btn-primary" %>
  </div>
<% end %>
